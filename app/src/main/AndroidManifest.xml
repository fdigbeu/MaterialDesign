<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="lveapp.fr.materialdesign">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".View.Activities.MainActivity"
            android:screenOrientation="sensorPortrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".View.Activities.LoginActivity"
            android:screenOrientation="sensorPortrait"
            android:label="@string/formLoginPassword"/>
        <activity
            android:name=".View.Activities.BottomSheetsActivity"
            android:screenOrientation="sensorPortrait"
            android:label="@string/bottomSheets" />
        <activity
            android:name=".View.Activities.NavDrawerActivity"
            android:screenOrientation="sensorPortrait"
            android:label="@string/navigationDrawer"/>
        <activity
            android:name=".View.Activities.BottomNavActivity"
            android:screenOrientation="sensorPortrait"
            android:label="@string/bottomNavigation" />
    </application>

</manifest>